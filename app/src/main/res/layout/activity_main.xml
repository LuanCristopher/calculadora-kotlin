<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >

    <TextView
        android:id="@+id/expressao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:layout_marginEnd="10dp"
        android:gravity="end"
        android:singleLine="true"
        android:ellipsize="start"
        android:text="0"/>

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/white"
        android:layout_marginEnd="10dp"
        android:gravity="end"
        android:textSize="30sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="0"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">
        
        
        <TextView
            android:id="@+id/limpar"
            style="@style/operators_Button"
            android:text="C"/>

        <TextView
            android:id="@+id/divisao"
            style="@style/operators_Button"
            android:text="/"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/num_7"
                style="@style/numbers_Button"
                android:text="7"/>

            <TextView
                android:id="@+id/num_8"
                style="@style/numbers_Button"
                android:text="8"/>

            <TextView
                android:id="@+id/num_9"
                style="@style/numbers_Button"
                android:text="9"/>

            <TextView
                android:id="@+id/multplica"
                style="@style/operators_Button"
                android:text="X"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/num_4"
            style="@style/numbers_Button"
            android:text="4"/>

        <TextView
            android:id="@+id/num_5"
            style="@style/numbers_Button"
            android:text="5"/>

        <TextView
            android:id="@+id/num_6"
            style="@style/numbers_Button"
            android:text="6"/>

        <TextView
            android:id="@+id/subtra"
            style="@style/operators_Button"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/num_1"
            style="@style/numbers_Button"
            android:text="1"/>

        <TextView
            android:id="@+id/num_2"
            style="@style/numbers_Button"
            android:text="2"/>

        <TextView
            android:id="@+id/num_3"
            style="@style/numbers_Button"
            android:text="3"/>

        <TextView
            android:id="@+id/soma"
            style="@style/operators_Button"
            android:text="+"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ponto"
            style="@style/numbers_Button"
            android:text="."/>

        <TextView
            android:id="@+id/num_0"
            style="@style/numbers_Button"
            android:text="0"/>

        <ImageView
            android:id="@+id/backspace"
            style="@style/numbers_Button"
            android:src="@drawable/back"
            android:scaleType="center"/>

        <TextView
            android:id="@+id/igual"
            style="@style/operators_Button"
            android:text="="/>

        <TextView
            android:id="@+id/toast_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/teal_700"
            android:text="Mostrar Toast"
            android:textColor="@color/white"
            android:padding="16dp"
            android:textSize="18sp"
            android:marginBottom="10dp"/>

    </LinearLayout>


</LinearLayout>

